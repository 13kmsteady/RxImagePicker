<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WeChat" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/wechat_primary</item>
        <item name="colorPrimaryDark">@color/wechat_primary_dark</item>
        <item name="toolbar">@style/Toolbar.WeChat</item>
        <item name="album.dropdown.title.color">@color/wechat_album_dropdown_title_text</item>
        <item name="album.dropdown.count.color">@color/wechat_album_dropdown_count_text</item>
        <item name="album.thumbnail.placeholder">@color/wechat_album_dropdown_thumbnail_placeholder</item>
        <item name="album.element.color">@android:color/white</item>
        <item name="page.bg">@color/wechat_page_bg</item>

        <item name="album.emptyView">@drawable/ic_empty_zhihu</item>
        <item name="album.emptyView.textColor">@color/wechat_album_empty_view</item>
        <item name="bottomToolbar.bg">@color/wechat_primary</item>
        <item name="bottomToolbar.preview.textColor">@android:color/white</item>
        <item name="bottomToolbar.apply.textColor">@android:color/white</item>

        <item name="item.checkCircle.backgroundColor">@color/wechat_item_checkCircle_backgroundColor</item>
        <item name="item.checkCircle.borderColor">@color/wechat_item_checkCircle_borderColor</item>
